{
  "name": "Mezzo",
  "version": "2.0.0",
  "description": "Mezzo",
  "main": "staging/main.js",
  "repository": {
    "type": "git",
    "url": ".git"
  },
  "scripts": {
    "clean": "rm -rf dist coverage staging",
    "copy-files": "mkdir -p staging && cp -R electron/ staging/",
    "stage": "npm run clean && vue-cli-service build && npm run copy-files",
    "test": "jest --coverage",
    "start": "npm run stage && electron staging/main.js",
    "dist": "npm run stage && electron-builder"
  },
  "build": {
    "appId": "com.mezzotimer.mezzo",
    "directories": {
      "output": "dist"
    },
    "dmg": {
      "contents": [
        {
          "x": 100,
          "y": 220
        },
        {
          "x": 400,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "nsis"
    }
  },
  "author": "Version 2 Software, LLC",
  "license": "Apache 2.0",
  "dependencies": {
    "electron-prompt": "^1.6.2",
    "electron-store": "8.0.0",
    "jquery": "3.6.0",
    "lodash": "4.17.21",
    "minimal-request-promise": "1.5.0",
    "mitt": "^3.0.0",
    "node-cron": "3.0.0",
    "sqlite3": "5.0.2",
    "uuid": "8.3.2",
    "vue": "^2.6.14"
  },
  "devDependencies": {
    "@vue/cli-service": "~4.5.0",
    "electron": "13.1.2",
    "electron-builder": "22.11.7",
    "electron-installer-dmg": "3.0.0",
    "electron-packager": "15.2.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "5.1.0",
    "jasmine": "3.7.0",
    "jest": "27.0.4"
  }
}
